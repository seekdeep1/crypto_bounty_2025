#!/bin/bash
# === Pre-commit guardrail for crypto_bounty_2025 ===

# Block commits containing secrets or debug prints
if git diff --cached | grep -E "API_KEY|SECRET|DEBUG|console\.log|API_KEY="; then
  echo "❌ Commit blocked: found secrets or debug prints."
  exit 1
fi

echo "✅ Pre-commit checks passed"
exit 0
